use_xft yes
xftfont Source Sans Pro:size=9

update_interval 3

total_run_times 0

double_buffer yes

minimum_size 200 0

draw_shades no
draw_outline no
draw_borders no
stippled_borders 0
border_inner_margin 10

alignment bottom_left
gap_x 20
gap_y 20

cpu_avg_samples 2

default_color f5f5e0

TEXT
${font Source Sans Pro:size=20}${alignc}$nodename${font}

Uptime:${alignr}$uptime
Volume:${alignr}${execi 2 amixer get Master | tail -1 | awk '{print $5}' | sed 's/\[//' | sed 's/\]//'}
Battery:${alignr}${battery_time BAT1} (${battery_percent BAT1}%)
${battery_bar BAT1}
CPU:${alignr}$cpu%
RAM:${alignr}$mem / $memmax
${hr 1}
${font Source Sans Pro:size=30}${alignc}${time %H:%M}${font}

${alignc}${time %a, %d %B %Y}
${hr 1}
PROCESS${alignr}CPU
${top name 1}${alignr}${top cpu 1}%
${top name 2}${alignr}${top cpu 2}%
${top name 3}${alignr}${top cpu 3}%
